---
import Container from "@/components/Container.astro";

const pathname = Astro.url.pathname;

const isHomePage = pathname === "/";
const isProfilePage = pathname.startsWith("/profile");
const isProjectPage = pathname.startsWith("/projects");
const isBlogPage = pathname.startsWith("/blog");
---

<header
  class="flex justify-center items-center mx-auto sticky top-0 w-full xl:w-[1120px] z-10"
>
  <Container class="max-w-full flex justify-center items-center">
    <div
      class="w-max fixed top-0 mt-5 bg-white/5 backdrop-blur-md border border-border rounded-full p-1"
    >
      <nav class="flex items-center">
        <ul class="flex items-center gap-1">
          <li>
            <a
              href="/"
              class:list={[
                "font-medium transition-colors block px-5 py-2",
                "hover:text-headings",
                isHomePage && "text-headings bg-white/20 rounded-full",
              ]}>Home</a
            >
          </li>
          <li>
            <a
              href="/profile"
              class:list={[
                "font-medium transition-colors block px-5 py-2",
                "hover:text-headings",
                isProfilePage && "text-headings bg-white/20 rounded-full",
              ]}>Profile</a
            >
          </li>
          <li>
            <a
              href="/projects"
              class:list={[
                "font-medium transition-colors block px-5 py-2",
                "hover:text-headings",
                isProjectPage && "text-headings bg-white/20 rounded-full",
              ]}>Projects</a
            >
          </li>
          <li>
            <a
              href="/blog"
              class:list={[
                "font-medium transition-colors block px-5 py-2",
                "hover:text-headings",
                isBlogPage && "text-headings bg-white/20 rounded-full",
              ]}>Blog</a
            >
          </li>
        </ul>
      </nav>
    </div>
  </Container>
</header>
